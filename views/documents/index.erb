<!-- Document header -->
<div class='row'>
    <h3>Documents for Project <%=project_id%> <img src="/images/button_plus_green.png" id="new_document" class="add_icon"/></h3>
</div>

<div class="section">
    <div class="row">
<% documents.each do |document| %>
        <div class="col-sm-6 col-md-2">
            <div class="thumbnail">
                <img src="/images/stock_new_text.png" alt="...">
                <div class="caption">
                  <%= "<a href='/projects/1/document_detail'>#{document.doc_type.name}" %>
                    <% if document.completed <= 25 %>
                      <%= "<span class='badge not_started'>#{document.completed}%</span></a>" %>
                    <% elsif document.completed <= 60 %>
                      <%= "<span class='badge started'>#{document.completed}%</span></a>" %>
                    <% elsif document.completed <= 95 %>
                      <%= "<span class='badge complete'>#{document.completed}%</span></a>" %>
                    <%end%>

                    <p></p>
                </div>
            </div>
        </div>
  <%= document.id %>
<% end %>

