<div class='row'>
  <h2>Editing <%= doc_type.name %>: <%= row.header %></h2>
</div>


<!-- List of projects/docs -->
<div class='row'>
    <div class='col-md-6'>
        <form role="form" action='POST'>
          <div class='row'>
            <% fields.each do |field| %>
              <div class="form-group col-md-12">
                <label for=""><%= field.question %></label>
                <textarea type="text" id="<%= field.id %>" class="form-control" rows="2"></textarea>
              </div>
            <% end %>
          </div>

          <div class='row'>
            <div class="form-group col-md-offset-8 col-md-4" >
              <% if this_step != 1 %>
                <a class="btn btn-large btn-info" href="<%= (this_step - 1) %>">Previous</a>
              <% end %>

              <% if this_step < steps %>
                <a class="btn btn-large btn-info pull-right" href="<%= (this_step + 1) %>">Next</a>
              <% else %>
                <a class="btn btn-large btn-info pull-right" href="../../view">Finish</a>
              <% end %>
            </div>
          </div>
        </form>
    </div>
</div>
